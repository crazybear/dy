{
  "manifest_version": 2,
  "name": "FY",
  "version": "1.0.0",
  "description": "fanyi",
  "icons": {
    "128": "icon.png"
  },
  "background": {
  },
  "browser_action": {
    "default_title": "翻译",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*.huya.com/*", "https://*.huya.com/*"],
      "js": ["contentscript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources" : [
    "huya.js"
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*.huya.com/*",
    "https://*.huya.com/*",
    "http://*.baidu.com/*",
    "https://*.baidu.com/*"
  ]
}