{
  "manifest_version": 2,
  "name": "FY",
  "version": "1.0.0",
  "description": "fanyi",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": ["backgroundscript.js"]
  },
  "browser_action": {
    "default_title": "翻译",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}